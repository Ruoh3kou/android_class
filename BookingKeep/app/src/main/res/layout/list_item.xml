<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f6f5f5"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <!-- 日期 -->
                <TextView
                    android:id="@+id/lv_item_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginVertical="15dp"
                    android:layout_marginLeft="20dp"
                    android:text="xx"
                    android:textColor="#999999"
                    android:textSize="16dp" />
                <!-- 总量 -->
                <TextView
                    android:id="@+id/lv_item_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginVertical="15dp"
                    android:layout_marginRight="20dp"
                    android:text="xx"
                    android:textColor="#999999"
                    android:textSize="16dp" />
            </RelativeLayout>
            <!-- 分界线 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#9C9191" />
        </LinearLayout>

        <com.cbj.MyView.ListView.MyListSubView
            android:id="@+id/lv_sub"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></com.cbj.MyView.ListView.MyListSubView>
    </LinearLayout>
</LinearLayout>
